pipeline {
    agent any

    stages {

        stage('Clone Code') {
            steps {
                git branch: 'main',
                url: 'https://github.com/Pradeep1155/End-to-End-deployment.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                echo 'No build step required for backend'
            }
        }

        stage('Test') {
            steps {
                echo 'Skipping tests (none defined)'
            }
        }

        stage('Deploy') {
            steps {
                dir('backend') {
                    sh 'nohup npm start &'
                }
            }
        }
    }
}

